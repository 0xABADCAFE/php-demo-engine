#!/usr/bin/php
<?php

/**
 *                   ______                            __
 *           __     /\\\\\\\\_                        /\\\
 *          /\\\  /\\\//////\\\_                      \/\\\
 *        /\\\//  \///     \//\\\    ________       ___\/\\\         _______
 *      /\\\//               /\\\   /\\\\\\\\\_    /\\\\\\\\\       /\\\\\\\\_
 *    /\\\//_              /\\\\/   /\\\/////\\\   /\\\////\\\     /\\\/////\\\
 *    \////\\\ __          /\\\/    \/\\\   \/\\\  \/\\\  \/\\\    /\\\\\\\\\\\
 *        \////\\\ __      \///_     \/\\\___\/\\\  \/\\\__\/\\\   \//\\\//////_
 *            \////\\\       /\\\     \/\\\\\\\\\\   \//\\\\\\\\\    \//\\\\\\\\\
 *                \///       \///      \/\\\//////     \/////////      \/////////
 *                                      \/\\\
 *                                       \///
 *
 *                             P(?:ointless|ortable|HP) Demo Engine/
 */

declare(strict_types = 1);

namespace ABadCafe\PDE;

require_once 'src/PDE.php';


$oDisplay = new Display\PlainASCII(120, 40);
$oRoutine = new Routine\Toroid($oDisplay, []);

$iFrameNumber = 0;
$fStartTime   = microtime(true);
while (true) {
    $oDisplay->clear();
    $oRoutine->render($iFrameNumber++, microtime(true) - $fStartTime);
    $oDisplay->redraw();
    usleep(10000);
}
